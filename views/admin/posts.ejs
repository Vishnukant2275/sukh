<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Community Posts</title>
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background: #f4f6f9;
        margin: 0;
        padding: 20px;
        color: #333;
      }

      h1 {
        text-align: center;
        margin-bottom: 20px;
        color: #2c3e50;
      }

      .card {
        background: #fff;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        max-width: 1000px;
        margin: auto;
        overflow-x: auto;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 10px;
        overflow: hidden;
      }

      thead {
        background: #3498db;
        color: #fff;
      }

      th,
      td {
        padding: 12px 15px;
        text-align: left;
      }

      tbody tr {
        border-bottom: 1px solid #ddd;
        transition: background 0.3s ease;
      }

      tbody tr:hover {
        background: #f1f7fd;
      }

      th {
        font-weight: 600;
      }

      td {
        font-size: 14px;
        color: #555;
      }

      .status {
        display: inline-block;
        padding: 4px 10px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: bold;
      }
      .status.approved {
        background: #e9f9ee;
        color: #27ae60;
      }
      .status.pending {
        background: #fff3cd;
        color: #f39c12;
      }
      .status.rejected {
        background: #fdecea;
        color: #e74c3c;
      }

      .actions button {
        border: none;
        padding: 6px 12px;
        margin: 0 5px;
        border-radius: 6px;
        cursor: pointer;
        font-size: 13px;
        font-weight: 500;
        transition: all 0.2s ease;
      }

      .btn-approve {
        background: #2ecc71;
        color: white;
      }
      .btn-reject {
        background: #b95b51;
        color: white;
      }
      .btn-delete {
        background: #e74c3c;
        color: white;
      }
      .btn-edit {
        background: #3498db;
        color: white;
      }

      .actions button:hover {
        opacity: 0.85;
      }
    </style>
  </head>
  <body>
    <h1>Community Posts</h1>
    <div class="card">
      <table>
        <thead>
          <tr>
            <th>Author</th>
            <th>Description</th>
            <th>Image</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if(posts.length === 0) { %>
          <tr>
            <td colspan="5" style="text-align: center; padding: 20px;">
              No posts available.
            </td> 
          </tr>
          <% } %>
          <% posts.forEach(post => { %>
          <tr>
           <td><%= post.userId ? post.userId.name : "Unknown" %></td>
            <td><%= post.description %></td>
            <td>
  <% if (post.image) { %>
    <img src="data:<%= post.image.contentType %>;base64,<%= post.image.data.toString('base64') %>" 
         alt="Post Image" width="100" />
  <% } else { %>
    <span>No Image</span>
  <% } %>
</td>
</td>
            <td>
              <span class="status <%= post.status.toLowerCase() %>">
                <%= post.status %>
              </span>
            </td>
            <td class="actions">
              
<% if (post.status === 'pending') { %>
  <button class="btn-approve" onclick="Approve( '<%= post._id %>')">Approve</button>
  <button class="btn-reject" onclick="Reject('<%= post._id %>')">Reject</button>
   <button class="btn-delete" onclick="Delete('<%= post._id %>')">Delete</button>
<% } else if (post.status === 'rejected') { %>
  <button class="btn-approve" onclick="Approve('<%= post._id %>')">Approve</button>
    <button class="btn-reject" onclick="Delete('<%= post._id %>')">Delete</button>
<% } else if (post.status === 'approved') { %>
  <button class="btn-delete" onclick="Delete('<%= post._id %>')">Delete</button>
<% } %>

            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <script>
      async function Approve(id) {
        try {
          const response = await fetch('/admin/posts/' + id + '/approve', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ status: 'Approved' })
          });
          if (response.ok) {
           
            location.reload();
          } else {
            alert('Error approving post');
          }
        } catch (error) {
          console.error('Error:', error);
          alert('Error approving post');
        }
        
      }

      async function Reject(id) {
        try {
          const response = await fetch('/admin/posts/' + id + '/reject', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ status: 'Rejected' })
          });
          if (response.ok) {
         
            location.reload();
          } else {
            alert('Error rejecting post');
          }
        } catch (error) {
          console.error('Error:', error);
          alert('Error rejecting post');
        }
        
      }
      async function Delete(id) {
        try {
          const response = await fetch('/admin/posts/' + id, {
            method: 'DELETE',
            headers: {
              'Content-Type': 'application/json'
            }
          });
          if (response.ok) {
           
            location.reload();
          } else {
            alert('Error deleting post');
          }
        } catch (error) {
          console.error('Error:', error);
          alert('Error deleting post');
        }
        
      }
    </script>
  </body>
</html>
